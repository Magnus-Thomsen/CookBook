<div class="box">

  <h1 class="title is-3">Edit <%= resource_name.to_s.humanize %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <% if resource.errors.any? %>
      <div class="notification is-danger is-dark">
        <button class="delete"></button>
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name, class:"label" %> 
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"input" %>
    </div>

    <div class="field">
      <%= f.label :email, class:"label" %> 
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class:"label" %> <i>(leave blank if you don't want to change it)</i> 
      <%= f.password_field :password, autocomplete: "new-password", class:"input" %>
      <% if @minimum_password_length %>
        
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class:"label" %> 
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input" %>
    </div>

  <div class="field">
    <%= f.label :avatar, class:"label" do%>
    Avatar
    <div class="file">
        <%= f.file_field :avatar, class:"file-input" %>
        <span class="file-cta">
          <span class="file-icon">
            <i class="fas fa-upload"></i>
          </span>
          <span class="file-label"> Choose a fileâ€¦ </span>
        </span>
    </div>
    <% end %>
  </div>

    <div class="field">
      <%= f.label :current_password, class:"label" %> <i>(we need your current password to confirm your changes)</i> 
      <%= f.password_field :current_password, autocomplete: "current-password", class:"input" %>
    </div>

    <div class="actions">
      <div class="level">
        <div class="level-left">
          <%= f.submit "Update", class:"button is-primary is-dark" %>
          <p>or</p>
          <%= link_to "Cancel My Account", user_registration_path(resource_name), data: { turbo_method: :delete, confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: "button is-danger is-dark" %>
        </div>
      </div>
    </div>
  <% end %>

  <br/>
  <%= link_to "Back", :back, class:"button is-dark" %>
</div>