<% content_for :title, "My Recipes" %>

<h1 class="title is-3">My Recipes</h1>

<table id="recipes" class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Created At</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% current_user.recipes.each do |recipe| %>
            <tr>
                <td><%= recipe.title %></td>
                <td><%= recipe.created_at.to_formatted_s(:long) %></td>
                <td><%= link_to "Show", recipe %></td>
                <td><%= link_to "Edit", edit_recipe_path(recipe) %></td>
                <td><%= link_to "Destroy", recipe, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?", turbo_method: :delete } %></td>
            </tr>
        <% end %>
    </tbody>
</table>